<!DOCTYPE html>
<html>
<head>
    <% include partials/head %>
</head>
<body>
<div id="container">
<header>
    <% include partials/header %>
</header>
<h2>Browse Code Snippets</h2>
<div>
<table id="searchfield" cellpadding="0">
    <tbody>
    <tr>
        <td>Keywords</td>
        <td><input id="tagsearch" autofocus></td>
    </tr>
    <tr>
        <td>Programming language</td>
        <td><select id="selectedLang">
                <option value='HTML'>HTML</option>
                <option value='JavaScript'>JavaScript</option>
                <option value='CSS'>CSS</option>
                <option value='PHP'>PHP</option>
                <option value='Ruby'>Ruby</option>
                <option value='Python'>Python</option>
                <option value='Java'>Java</option>
                <option value='C'>C</option>
                <option value='C#'>C#</option>
                <option value='C++'>C++</option>
                <option value='Other'>Other</option>
                <option value='All' selected="true">All</option>
            </select></td>
    </tr>
    <tr><td>Author</td><td><input id="authorSearch"></td></tr>
    </tbody>
</table>
<button class="submitbutton" onclick=search()>Search</button>
</div>
<div id="scoresort">
    <button class="whitebutton" onclick="sortTableByScoreAsc()"><img src="/images/sortdesc.png" alt="Sort by Score Ascending"></button>
    <button class="whitebutton" onclick="sortTableByScoreDesc()"><img src="/images/sortasc.png" alt="Sort by Score Descending"></button>
</div>
<div id='users'>
    <table id="myTable">
        <thead>
        <tr>
            <th>TITLE</th>
            <th>DESCRIPTION</th>
            <th>LANGUAGE</th>
            <th>AUTHOR</th>
            <th>DATE</th>
            <th>SCORE</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody class="list">
        <% for(var i = 0; i < data.length; ++i) { %>
        <tr class="hovertable">
            <td class=""><%= data[i].title %></td>
            <td class="descript"><%= data[i].descript %></td>
            <td class="lang"><%= data[i].lang %></td>
            <td class="author"><%= data[i].author %></td>
            <!--<td><%= data[i].date.getDate() + "." + (data[i].date.getMonth() + 1) + "." + data[i].date.getFullYear() %></td>-->
            <td class="date"><%= data[i].date.toLocaleString() %></td>
            <td class="score"><%= data[i].score %></td>
            <td><a href="/read/<%= data[i]._id %>"><img src="/images/read.png" alt="READ"
                                                        onclick=setIdToLocalStorage('<%= data[i]._id %>')></a></td>
            <td><img src="/images/edit.png" alt="EDIT"  style="cursor: pointer"
                                       onclick=setIdToLocalStorage('<%= data[i]._id %>'),stopIrresponsi(this)>
            </td>
            <!--<th><a href="/update"><img src="/images/edit.png" alt="EDIT"></a></th>-->
            <td><img src="/images/delete.png" alt="DELETE" style="cursor: pointer"
                                       onclick=setIdToLocalStorage('<%= data[i]._id %>'),stopIrresponsiDel(this)></td>
        </tr>
        <% } %>
        </tbody>
    </table>
</div>
<footer>
    <% include partials/footer %>
    <!--<script>initLangSelectList()</script>-->
</footer>
</div>
</body>
</html>